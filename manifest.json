{
  "manifest_version": 3,
  "name": "Manaba Life Status",
  "version": "1.0",
  "description": "Manabaのライフステータスを表示する拡張機能",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://manaba.tsukuba.ac.jp/*",
    "https://api.github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://manaba.tsukuba.ac.jp/*"],
      "js": ["utils.js", "config.js", "content.js"],
      "run_at": "document_end"
    }
  ]
}